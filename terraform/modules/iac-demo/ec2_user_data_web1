<powershell>

$ErrorActionPreference = 'Stop'

Install-WindowsFeature -name Web-Server -IncludeManagementTools

@"
<html>
    <body>
        <h1>Web server 1</h1>

        Everything is A-OK.

       </body>
</html>
"@ | Out-File C:\inetpub\wwwroot\Default.htm

</powershell>
<runAsLocalSystem>true</runAsLocalSystem>